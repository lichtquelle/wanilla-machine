{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
